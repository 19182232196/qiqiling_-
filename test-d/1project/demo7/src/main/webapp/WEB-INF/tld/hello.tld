<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE taglib
        PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
        "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">
<taglib>
    <tlib-version>1.0</tlib-version>
    <jsp-version>1.2</jsp-version>
    <short-name>hello</short-name>

    <!--给文件起一个地址-->
    <uri>http://hello.com/helloTag</uri>
    <!--定义标签的开始-->
    <tag>
        <name>helloTag</name>
        <!--实现标签具体功能的Java类-->
        <tag-class>com.tag.HelloTagSupport</tag-class>
        <!--给标签加一个属性-->
        <attribute>
            <name>country</name>
            <required>true</required><!--该属性是否不能不写-->
            <rtexprvalue>true</rtexprvalue><!--是否识别EL表达式-->
        </attribute>

    </tag>

</taglib>